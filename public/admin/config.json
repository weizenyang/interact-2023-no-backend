{
  "backend": {
    "name": "git-gateway",
    "branch": "master"
  },
  "publish_mode": "editorial_workflow",
  "media_folder": "/public",
  "public_folder": "/public",
  "collections": [
    {
      "name": "blog",
      "label": "Blog",
      "folder": "/submissions-info",
      "create": true,
      "fields": [
        {
          "label": "Layout",
          "name": "layout",
          "widget": "hidden",
          "default": "blog"
        },
        {
          "label": "Title",
          "name": "title",
          "widget": "string"
        },
        {
          "label": "Publish Date",
          "name": "date",
          "widget": "datetime"
        },
        {
          "label": "Description",
          "name": "desc",
          "widget": "markdown"
        },
        {
          "label": "Body",
          "name": "body",
          "widget": "markdown"
        }
      ]
    }
  ]
}