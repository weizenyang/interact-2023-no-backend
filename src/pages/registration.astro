	.registration-content-2 h2{
		text-transform: uppercase;
		padding-top: 0em;
		padding-bottom: 1em;
		margin: 0%;
		font-family: 'S-B';
		/* font-size: 2.5em; */
	}

	.input-field{
		padding-top: 1em;
		display: flex;
		flex-direction: column;
		width: 50%;
	}

	.input-field input, .input-field textarea{
		all: unset;
		padding: 0.5em;
		border-radius: 0.5em;
		border: 2px solid #002C38;
		font-family: sans-serif;
	}

	.input-field label{
		padding-bottom: 0.2em;
		
