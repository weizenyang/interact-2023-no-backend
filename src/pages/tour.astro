---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Prefooter from "../components/Pre-footer.astro";

const places = await Astro.glob("/src/data/tour_data/*.md");

var placesCompiled = places.map((item) => {
  var wrapper = item.compiledContent();

  return wrapper;
});

---

<Layout title="Interact 2023">
	<main>
		<Navbar />

		<content>
			<section class="sv-content-1">
				<h1>Tourism in York and Beyond!</h1>



			</section>

			{placesCompiled.map((e) => 
				<section class="sv-content-1">
					<div set:html={e}>
						
					</div>
				</section>
					
				)}
		</content>
	</main>
</Layout>

<Footer />

<style>
	:root {
		--astro-gradient: linear-gradient(0deg, #4f39fa, #da62c4);
	}

	label {
		font-family: "AH-B";
	}

	content {
		width: 100%;
	}

