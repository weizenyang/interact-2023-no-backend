---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Prefooter from '../components/Pre-footer.astro';
---

<Layout title='Interact 2023'>
	
	
	
	<main>
		<Navbar/>
		<content>
			<section class='contact-content-1'>

				<h1 class="title">
					CONTACT FORM
				</h1>
						
						<div class="container">
						<form action="POST" name="contact" netlify>

							

							<div class="input-field">
								<label>Name:</label>
								<input name="name" placeholder="John Doe">
								<label>Email:</label>
								<input type="email" name="email" placeholder="johndoe@gmail.com" required>
								<label>Message:</label>
								<textarea name="message" placeholder="Message Here"></textarea>
								<div class="captcha" data-netlify-recaptcha="true"></div>
								<button class="submit-button" type="submit" name="submit">Send</button>
								
							</div>
							
							
						</form>

					<div class="alt-contact">


						<h2>
							Alternative Contacts
						</h2>
						
						<div class="contact-details">
							<h4>Paolo Buono</h4> 
							<p> Dipartimento di Informatica, Università degli Studi di Bari Aldo Moro, Via Orabona, 4 - 70125 Bari, Italy 
								<br>Phone: +39 080 544 2239 
								<br>Fax: +39 080 544 3300 
								<br>Email: paolo.buono@uniba.it
								<br>
							</p>

							<h4>Paolo Buono</h4> 
							<p> Dipartimento di Informatica, Università degli Studi di Bari Aldo Moro, Via Orabona, 4 - 70125 Bari, Italy 
								<br>Phone: +39 080 544 2239 
								<br>Fax: +39 080 544 3300 
								<br>Email: paolo.buono@uniba.it
								<br>
							</p>

							

						</div>
					</div>

				</div>
				
			</section>

		</content>
		
	</main>

	<Footer/>
	
</Layout>

<style>

	:root {
		--astro-gradient: linear-gradient(0deg, #4f39fa, #da62c4);
	}

	main{
		display: flex;
		flex-direction: row;
		overscroll-behavior: none;
		/* overflow-y: scroll */
		/* height: 300vh;
		padding-left: 14em; */
		/* margin-left: 14em; */
		/* position: absolute; */
	}

	label{
		font-family: "AH-B";
		padding-top: 1em;
	}

	content{
		width: 100%;
	}

	.contact-content-1{
		box-sizing: border-box;
		display: flex;
		flex-direction: column;
		align-items: center;
		/* width: 100%; */
		/* justify-content: space-between; */
		/* height: 100vh; */
		/* width: 100%; */
		padding: 4em;
		height: 100vh;
		border-bottom: 1px solid #002C38;
		/* padding-left: 16em; */
	}

	.container{
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100vh;
		margin: auto;
		max-width: 1200px;
	}

	.captcha{
		padding-top: 1em;
		
	}

	.center{
		align-items: center;
		justify-content: center;
		text-align: center;
	}

	.button-padding h2{
		padding: 0.1em 1em;
		border-radius: 50px;
	}

	.center *{
		margin: auto;
	}

	.sub-types{
		background-color: #002C38;
		color: #FCF7EB;
		border-radius: 30px;
		padding: 0.5em 0em 0.5em 0em ;
		margin-bottom: 1em;
		margin-top: 1em;
		display: flex;
		flex-direction: column;
		/* width: max-content; */
		/* height: 100%; */
		/* width: 100%; */
	}

	form{
		display: flex;
		flex-direction: column;
		width: 60%;
		padding-right: 4em;
		/* justify-content: space-between; */
	}

	.submit-button{
		margin-top: 1em;
		padding: 0.5em 1em;
	}

	.alt-contact{
		align-self: center;
		display: flex;
		flex-direction: column;
		width: 40%;
	}

	.input-field{
		border-radius: 0.2em;
		box-shadow: 10px 10px 40px #002C3855;
		padding: 1em;
		/* margin-top: 20vh; */
		background-color: #fff;
		padding-top: 1em;
		display: flex;
		flex-direction: column;
		
		/* width: 50%; */
		
		
	}

	.input-field input, .input-field textarea{
		all: unset;
		padding: 0.5em;
		border-radius: 0.5em;
		border: 2px solid #002C38;
		font-family: sans-serif;
	}

	.input-field label{
		padding-bottom: 0.2em;
		
	}

	.contact-details h4{
		margin: 0%;
		font-family: 'AH-B';
	}

	.contact-details p{
		margin-top: 0%;
	}


	.text-details{
		justify-content: center;
		align-content: center;
		text-align: center;
	}

	.nav-container{
		width: 14em;
	}

	.img-mask{
		max-height: 450px;
		overflow: hidden;
	}

	.rch{
		width: 100%;
		/* max-height: 473px; */
		object-fit: cover;
	}

	.stretch{
		box-sizing: border-box;
		display: flex;
		width: 100%;
		/* height: 100%; */
	}

	.pill{
		font-family: 'AH-B';
		font-size: 1em;
		margin: 0px;
		display: flex;
		padding: 0.2em 0.5em 0.2em 0.5em ;
		background-color: #002C38;
		color: #FCF7EB;
		border-radius: 50px;
		align-items: center;
		width: fit-content;
	}

	.pill img{
		margin: 0%;
		padding-right: 0.5em;
		width: 1em;
		height: 1em;
	}

	.location-detail{
		align-items: flex-end;
		margin-top: auto;
		margin-bottom: 0%;
		margin-left: 2em;
		white-space: nowrap;
		width: max-content;
	}

	.title{
		font-family: 'S-B';
		font-size: 2.5em;
		/* height: 50%; */
		margin: 0%;
		
		overflow: hidden;
		/* width: 200%; */
	}

	.title h3{
		font-family: 'S-B';
		font-size: 1.2em;
		padding-bottom: 0.2em;
		/* height: 50%; */
		margin: 0%;
	}

	

	.contact-content-5 h1{
		padding-top: 1em;
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		margin: 0%;
		font-family: 'S-B';
		font-size: 2.5em;
	}

	.contact-content-2 h3{
		margin: 0%;
		padding-top: 1em;
		font-family: 'AH-B';
		
		/* font-size: 2.5em; */
	}

	@media screen and (max-width:1200px){
		.contact-content-1{
			height: 100%;
			padding: 2em;
		}
		.input-field{
			width: 100%;
		}

		.title{
			font-size: 2em;
		}

		form{

		width: 100%;
		padding-right: 0em;
		/* justify-content: space-between; */
	}

	.container{
		padding-top: 2em;
		display: flex;
		flex-direction: column;
		width: 100%;
		align-items: flex-start;
		justify-content: flex-start;
	}

	.submit-button{
		margin-top: 1em;
		padding: 0.5em 1em;
	}

	.alt-contact{
		align-self: center;
		display: flex;
		flex-direction: column;
		padding-top: 2em;
		padding-bottom: 2em;
		width: 100%;
	}

	.input-field input, .input-field textarea{
		all: unset;
		padding: 0.5em;
		border-radius: 0.5em;
		border: 2px solid #002C38;
		font-family: sans-serif;
	}

	.input-field label{
		padding-bottom: 0.2em;
		
	}
	}

	

	

</style>

